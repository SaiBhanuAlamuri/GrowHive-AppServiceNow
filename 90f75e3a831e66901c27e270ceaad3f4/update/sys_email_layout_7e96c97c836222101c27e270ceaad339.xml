<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_email_layout">
    <sys_email_layout action="INSERT_OR_UPDATE">
        <advanced>true</advanced>
        <advanced_layout><![CDATA[
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GrowHive Notification</title>
  <style>
    * {
      -webkit-text-size-adjust: none;
    }
    body {
      margin: 0 !important;
      padding: 0 !important;
      font-family: 'Lato', Arial, sans-serif;
      background-color: #1e1e1e;
      color: #ffffff;
      max-width: 600px;
    }
    .header {
      background-color: #2b2b2b;
      text-align: center;
      padding: 20px;
    }
    .header img {
      height: 30px;
    }
    .content {
      padding: 20px;
      font-size: 16px;
    }
    .footer {
      background-color: #2b2b2b;
      padding: 20px;
      font-size: 14px;
      color: #bbbbbb;
      text-align: left;
    }
    #snc_notification_unsubscribe, #snc_notification_preference {
      color: #3C59E7;
      font-size: 16px;
      line-height: 19px;
    }
    #snc_notification_unsubscribe {
      padding-right: 8px;
    }
    #snc_notification_preference {
      padding-left: 8px;
    }
    a {
      color: #87cefa;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="header">
    <img src="https://yourdomain.com/logo.png" alt="GrowHive Logo" />
  </div>

  <div class="content">
    ${notification:body}
  </div>

  <div class="footer">
    <span id="snc_notification_unsubscribe">${NOTIF_UNSUB}</span> |
    <span id="snc_notification_preference">${NOTIF_PREFS+link_text="Manage Preferences"}</span>
  </div>
</body>
</html>
]]></advanced_layout>
